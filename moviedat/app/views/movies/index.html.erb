<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Cast</th>
      <th>Plot</th>
      <th>Movie url</th>
      <th>Poster url</th>
      <th>Comment1</th>
      <th>Comment2</th>
      <th>Comment3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.cast %></td>
        <td><%= movie.plot %></td>
        <td><%= movie.movie_url %></td>
        <td><%= movie.poster_url %></td>
        <td><%= movie.comment1 %></td>
        <td><%= movie.comment2 %></td>
        <td><%= movie.comment3 %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

